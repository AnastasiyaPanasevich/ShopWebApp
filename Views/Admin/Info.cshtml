@using ShopWebApp
@using Microsoft.AspNetCore.Http;
@model AdminModel
@{
    Layout = "_AdminLayout";
}

@section modal

{
    <div class="modal fade" id="staticBackdrop" data-backdrop="modal" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Confirm Deletion</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="@Context.Request.Path/remove" method="post" class="form-group">
                    <div class="modal-body">
                        Are you sure you want to delete this object along with all its inherited objects?
                        <p class="text-muted" style="font-size: smaller">Confirm the operation with a password</p>
                        <input type="password" class="form-control" name="password" placeholder="Password" required>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-warning" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Yes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
