@model ShopWebApp.AccountModel
@{
    Layout = "_Layout";
}
<script>
    function showPasswordChange() {
        var button = document.getElementById("passwordShow");
        var seciton = document.getElementById("changePassword");
        button.style.display = "none";
        seciton.style.display = "inline";
    }
</script>
<br />
<h2 style="text-align:center">Edit Account Information</h2>
<br />
<span class="text-success">@Model.Message</span>
<br />
<form controller="Account" action="Edit" method="post">
    <div class="row">
        <div class="col">
            <label for="User.Name" asp-for="@Model.User.Name">First Name</label>
            <input type="text" name="User.Name" class="form-control" asp-for="@Model.User.Name" pattern=".{3,64}" value="@Model.User.Name">
        </div>
        <div class="col">
            <label for="User.Surname" asp-for="@Model.User.Surname">Last Name</label>
            <input type="text" name="User.Surname" asp-for="@Model.User.Surname" pattern=".{3,64}" class="form-control" value="@Model.User.Surname">
        </div>
    </div>
    <div class="form-group">
        <label for="User.Email" asp-for="@Model.User.Email">Email Address</label>
        <input type="email" class="form-control" asp-for="@Model.User.Email" name="User.Email" pattern=".{5,128}" value="@Model.User.Email">
    </div>

    <div class="form-group">
        <label for="User.Address" asp-for="@Model.User.Address">Address</label>
        <input type="text" class="form-control" name="User.Address" asp-for="@Model.User.Address" placeholder="Street, Postal Code, City" pattern=".{5,128}" value="@Model.User.Address">
    </div>
    <div class="form-group">
        <label for="User.Phone" asp-for="@Model.User.Phone">Phone Number</label>
        <input type="text" class="form-control" name="User.Phone" asp-for="@Model.User.Phone" pattern=".{9,16}" value="@Model.User.Phone">
    </div>
    <button type="button" class="btn btn-outline-primary btn-sm btn-block" id="passwordShow" onclick="showPasswordChange()" style="margin-bottom:7px">Change Password</button>
    <div class="form-group" id="changePassword" style="display:none">
        New Password (at least 8 characters)
        <div class="form-group">
            <input type="password" name="Password" asp-for="@Model.Password" pattern=".{8,128}" class="form-control" placeholder="New Password">
        </div>
        Repeat Password
        <div class="form-group">
            <input type="password" name="Password2" asp-for="@Model.Password2" pattern=".{8,128}" class="form-control" placeholder="Repeat Password">
        </div>
        Current Password
        <div class="form-group">
            <input type="password" name="OldPassword" asp-for="@Model.OldPassword" pattern=".{8,128}" class="form-control" placeholder="Current Password">
        </div>
    </div>
    <button type="submit" class="btn btn-primary btn-lg btn-block">Update Account Information</button>
</form>
<a href="@Url.Action("index", "account")" class="btn btn-outline-primary btn-lg btn-block" style="margin-top: 7px">Back to Account</a>
